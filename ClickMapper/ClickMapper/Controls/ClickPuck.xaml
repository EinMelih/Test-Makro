<UserControl x:Class="ClickMapper.Controls.ClickPuck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="60" Height="60"
             Cursor="Hand">
    
    <Grid>
        <!-- Äußerer Glow-Effekt -->
        <Ellipse x:Name="GlowEllipse"
                 Fill="Transparent"
                 Stroke="#402196F3"
                 StrokeThickness="8"
                 Opacity="0.5"/>
        
        <!-- Hauptkreis -->
        <Ellipse x:Name="MainEllipse"
                 Fill="#DD2196F3"
                 Stroke="#FF1565C0"
                 StrokeThickness="3">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
            </Ellipse.Effect>
        </Ellipse>
        
        <!-- Innerer Highlight -->
        <Ellipse Margin="8,5,8,20"
                 VerticalAlignment="Top">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <!-- Tastenbeschriftung -->
        <TextBlock x:Name="KeyLabel"
                   Text="?"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        
        <!-- ID-Anzeige (klein, oben) -->
        <TextBlock x:Name="IdLabel"
                   Text="#1"
                   FontSize="9"
                   FontWeight="Bold"
                   Foreground="#AAFFFFFF"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,8,0,0"/>
    </Grid>
</UserControl>
