<Window x:Class="ClickMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ClickMapper.Controls"
        Title="ClickMapper"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Normal"
        ShowInTaskbar="True"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Grid x:Name="MainGrid">
        <!-- Canvas fÃ¼r die Pucks -->
        <Canvas x:Name="PuckCanvas" 
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
        
        <!-- Spawn-Position Marker (nur sichtbar wenn gesetzt) -->
        <Canvas x:Name="SpawnMarkerCanvas" IsHitTestVisible="False">
            <Ellipse x:Name="SpawnMarker"
                     Width="30" Height="30"
                     Stroke="#FF4CAF50"
                     StrokeThickness="2"
                     StrokeDashArray="2,2"
                     Fill="#224CAF50"
                     Visibility="Collapsed"/>
        </Canvas>
        
        <!-- Control Panel - verschiebbar -->
        <Border x:Name="ControlPanel"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="12"
                CornerRadius="12"
                Background="#E8303030"
                BorderBrush="#FF505050"
                BorderThickness="2"
                Cursor="SizeAll"
                MouseLeftButtonDown="ControlPanel_MouseLeftButtonDown"
                MouseMove="ControlPanel_MouseMove"
                MouseLeftButtonUp="ControlPanel_MouseLeftButtonUp">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform x:Name="ControlPanelTransform" X="50" Y="50"/>
            </Border.RenderTransform>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <!-- Titel mit Drag-Hinweis -->
                <TextBlock Text="â‰¡ ClickMapper" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#FF2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           ToolTip="Ziehen um Panel zu verschieben"/>
                
                <!-- Status Anzeige -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Modus: " Foreground="White" FontSize="11"/>
                    <TextBlock x:Name="ModeLabel" 
                               Text="EDIT" 
                               FontWeight="Bold"
                               FontSize="11"
                               Foreground="#FF4CAF50"/>
                    <TextBlock Text="  |  Pucks: " Foreground="White" FontSize="11"/>
                    <TextBlock x:Name="PuckCountLabel" 
                               Text="0" 
                               FontWeight="Bold"
                               FontSize="11"
                               Foreground="#FFFFC107"/>
                </StackPanel>
                
                <!-- Mode und Add Puck Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Button x:Name="ModeButton" 
                            Content="â–¶ PLAY" 
                            Style="{StaticResource ModeButtonStyle}"
                            Click="ModeButton_Click"
                            Width="100" Height="35"
                            Margin="0,0,5,0"/>
                    
                    <Button x:Name="AddPuckButton" 
                            Content="+ Puck"
                            Width="70"
                            Height="35"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#CC2196F3"
                            BorderBrush="#FF1976D2"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="AddPuckButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <!-- Spawn Position Button -->
                <Button x:Name="SetSpawnButton" 
                        Content="ðŸ“ Spawn-Position setzen"
                        Height="26"
                        FontSize="10"
                        Foreground="White"
                        Background="#CC00BCD4"
                        BorderBrush="#FF0097A7"
                        BorderThickness="1"
                        Cursor="Hand"
                        Margin="0,0,0,8"
                        Click="SetSpawnButton_Click"
                        ToolTip="Klicke dann auf die Stelle wo neue Pucks erscheinen sollen">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Profil-Auswahl -->
                <Border Background="#40000000" CornerRadius="5" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Profil:" Foreground="#FFAAAAAA" FontSize="10" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="ProfileNameBox"
                                     Width="100"
                                     Height="24"
                                     FontSize="10"
                                     Text="Standard"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,5,0"/>
                            <Button x:Name="SaveProfileButton" 
                                    Content="ðŸ’¾"
                                    Width="28" Height="24"
                                    FontSize="12"
                                    Foreground="White"
                                    Background="#CC9C27B0"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,0,2,0"
                                    Click="SaveButton_Click"
                                    ToolTip="Profil speichern">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="LoadProfileButton" 
                                    Content="ðŸ“‚"
                                    Width="28" Height="24"
                                    FontSize="12"
                                    Foreground="White"
                                    Background="#CC607D8B"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="LoadButton_Click"
                                    ToolTip="Profil laden">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        
                        <!-- Profil-Liste -->
                        <ComboBox x:Name="ProfileList"
                                  Margin="0,5,0,0"
                                  Height="24"
                                  FontSize="10"
                                  SelectionChanged="ProfileList_SelectionChanged"
                                  ToolTip="Vorhandene Profile"/>
                    </StackPanel>
                </Border>
                
                <!-- Hilfetext -->
                <TextBlock Text="Rechtsklick = Taste | Doppelklick = LÃ¶schen" 
                           Foreground="#FF666666" 
                           FontSize="9"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <!-- Exit Button -->
                <Button x:Name="ExitButton" 
                        Content="âœ• Beenden"
                        Width="80"
                        Height="26"
                        FontSize="10"
                        Foreground="White"
                        Background="#CCF44336"
                        BorderBrush="#FFD32F2F"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="ExitButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Tastenzuweisungs-Dialog -->
        <Border x:Name="KeyAssignDialog"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="30"
                CornerRadius="15"
                Background="#F0202020"
                BorderBrush="#FF2196F3"
                BorderThickness="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.7"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Taste zuweisen" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#FF2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <TextBlock Text="DrÃ¼cke eine beliebige Taste..." 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
                <Button Content="Abbrechen" 
                        Width="100"
                        Height="30"
                        Foreground="White"
                        Background="#CC757575"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelKeyAssign_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Spawn-Position Infotext -->
        <TextBlock x:Name="SpawnModeHint"
                   Text="ðŸŽ¯ Klicke auf die Stelle wo neue Pucks erscheinen sollen (ESC zum Abbrechen)"
                   Visibility="Collapsed"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,50"
                   Padding="15,8"
                   Background="#E0FF5722"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="Bold"/>
    </Grid>
</Window>
